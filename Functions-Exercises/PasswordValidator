#include <iostream>
#include <string>
using namespace std;

bool checkPassLength(string password) {
    int length = password.length();
    return (length >= 6 && length <= 10);
}

bool checkPassValid(string password, int &digit) {
    bool onlyLettersDigits = true;
    digit = 0;

    for (char c : password) {
        if (isdigit(c)) {
            digit++;
        } 
        else if (!isalpha(c)) { 
            onlyLettersDigits = false;
        }
    }
    return onlyLettersDigits;
}

void check(string password) {
    bool bLength = checkPassLength(password);
    if (!bLength) {
        cout << "Password must be between 6 and 10 characters" << endl;
    }

    int digit = 0;
    bool validChars = checkPassValid(password, digit);

    if (!validChars) {
        cout << "Password must consist only of letters and digits" << endl;
    }

    if (digit < 2) {
        cout << "Password must have at least 2 digits" << endl;
    }

    if (bLength && validChars && digit >= 2) {
        cout << "Password is valid" << endl;
    }
}

int main() {
    string password;
    cin >> password;
    check(password);
    return 0;
}
