#include <iostream>

using namespace std;

void printTriangleI(int i) {
    for (int j = 1; j <= i; j++) {
        cout << j << " " << flush;
    }
    cout << endl;
}

void printTriangle(int n) {
    for (int i = 1; i <= n; i++) {
        printTriangleI(i);
    }
    for (int i = n - 1; i >= 1; i--) {
        printTriangleI(i);
    }
}

int main() {
    int n;
    cin >> n;

    printTriangle(n);
    return 0;
}
