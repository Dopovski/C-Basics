#include <iostream>
#include <cmath>
using namespace std;

const int MAX = 100;

int main() {
    int N;
    int matrix[MAX][MAX];

    cin >> N;

    for (int i = 0; i < N; i++) {
        for (int j = 0; j < N; j++) {
            cin >> matrix[i][j];
        }
    }

    int primarySum = 0;
    int secondarySum = 0;

    for (int i = 0; i < N; i++) {
        primarySum += matrix[i][i];
        secondarySum += matrix[i][N - 1 - i];
    }

    cout << abs(primarySum - secondarySum);

    return 0;
}
