#include <iostream>
#include <climits>
#include <cmath>
using namespace std;

const int MAX_SIZE_ARRAY = 100;

void readArray(int array[], int size) {
    for (int i = 0; i < size; i++) {
        cin >> array[i];
    }
}

int main() {
    int numbers[MAX_SIZE_ARRAY];
    int n;
    cin >> n;

    readArray(numbers, n);

    if (n == 1) {
        cout << 0 << endl;
        return 0;
    }

    int minDiff = INT_MAX;

    for (int i = 0; i < n - 1; i++) {
        for (int j = i + 1; j < n; j++) {
            int diff = abs(numbers[i] - numbers[j]);
            if (diff < minDiff) {
                minDiff = diff;
            }
        }
    }

    cout << minDiff << endl;

    return 0;
}
