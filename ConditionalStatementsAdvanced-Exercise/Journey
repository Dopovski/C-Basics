#include <iostream>
#include <string>

using namespace std;

int main() {
    double budget;
    cin >> budget;

    string season;
    cin >> season;

    string destination= "";
    if (budget <= 100) {
        destination = "Bulgaria";
    }
    else if (budget <= 1000) {
        destination = "Balkans";
    }
    else if (budget > 1000) {
        destination = "Europe";
    }

    double price = 0;

    if (destination == "Bulgaria") {
        if (season == "summer") {
            price = budget * 0.3;
        }
        else if (season == "winter") {
            price = budget * 0.7;
        }
    }
    else if (destination == "Balkans") {
        if (season == "summer") {
            price = budget * 0.4;
        }
        else if (season == "winter") {
            price = budget * 0.8;
        }
    }
    else if (destination == "Europe") {
            price = budget * 0.9;
        }

    string accommodation = "";

    if (destination == "Europe" || season == "winter") {
        accommodation = "Hotel";
    }
    else if (season == "winter") {
        accommodation = "Hotel";
    }
   else if (season == "summer") {
        accommodation = "Camp";
    }
    cout << "Somewhere in " << destination << endl;

    cout.setf(ios::fixed);
    cout.precision(2);
    cout << accommodation << " - " << price << endl;
}
