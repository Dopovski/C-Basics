#include <iostream>

using namespace std;

const int MAX_NUMBERS_SIZE = 99;

void readArray(int arr[], int size) {
    for (int i = 0; i < size; i++) {
        cin >> arr[i];
    }
}

int compareArrays(int arr1[], int arr2[], int size, long &sum) {
    sum = 0;

    for (int i = 0; i < size; i++) {
        if (arr1[i] != arr2[i]) {
            return i;  
        } else {
            sum += arr1[i];
        }
    }
    return -1;           
}

int main() {

    int n;
    cin >> n;

    int array1[MAX_NUMBERS_SIZE];
    readArray(array1, n);

    int array2[MAX_NUMBERS_SIZE];
    readArray(array2, n);

    long sum;
    
    int result = compareArrays(array1, array2, n, sum);

    if (result == -1) {
        cout << "Arrays are identical. Sum: " << sum << endl;
    } else {
        cout << "Arrays are not identical. Found difference at " << result << " index." << endl;
    }
}
